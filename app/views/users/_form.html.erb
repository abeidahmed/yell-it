<%= form_with model: model do |form| %>
  <div class="form-group">
    <%= form.label :full_name %>
    <%= form.text_field :full_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :email_address %>
    <%= form.email_field :email_address, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="flex items-center">
      <%= form.label :password %>
      <span class="ml-1 lh-5 form-hint">(min. 6 characters)</span>
    </div>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Create account", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
