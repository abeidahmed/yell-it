<%= form_with model: model, data: { controller: "form", action: "turbo:submit-end->form#onError" } do |form| %>
  <div class="form-group mt-0">
    <div class="form-group-header">
      <%= form.label :full_name %>
    </div>
    <div class="form-group-body">
      <%= form.text_field :full_name, class: "form-control width-full", required: true, maxlength: 255 %>
      <%= render "shared/form_errors", error_type: "full_name" %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-group-header">
      <%= form.label :email_address %>
    </div>
    <div class="form-group-body">
      <%= form.email_field :email_address, class: "form-control width-full", required: true, maxlength: 255 %>
      <%= render "shared/form_errors", error_type: "email_address" %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-group-header">
      <div class="flex items-center">
        <%= form.label :password %>
        <span id="password-hint" class="ml-1 text-gray">(min. 6 characters)</span>
      </div>
    </div>
    <div class="form-group-body">
      <%= form.password_field :password, class: "form-control width-full", required: true, maxlength: 72, aria: { describedBy: "password-hint" } %>
      <%= render "shared/form_errors", error_type: "password" %>
    </div>
  </div>
  <%= form.submit "Create account", class: "btn btn-primary btn-block" %>
<% end %>
