<%= render "templates/focussed", page_heading: "Create an account" do %>
  <div class="Box-body">
    <%= render "form", model: @user %>
  </div>
  <div class="Box-footer text-gray text-center">
    Already have an account? <%= link_to "Sign in", new_session_path %>
  </div>
  <% content_for :footer do %>
    <p class="mt-5 text-center text-gray f6">
      By signing up, you agree to the Terms and Privacy policy.
    </p>
  <% end %>
<% end %>
