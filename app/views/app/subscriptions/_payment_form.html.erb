<%= form_with url: app_project_subscriptions_path("project_id"),
  data: { controller: "stripe", action: "stripe#submitForm" },
  id: "payment-form" do |form|
%>
  <section>
    <h6 class="text-uppercase text-gray">Card details</h6>
    <div class="form-group mt-2">
      <div class="form-group-header">
        <label for="card-element">Credit or debit card</label>
      </div>
      <div data-stripe-target="cardElement" id="card-element" class="form-group-body form-control width-full"></div>
      <div data-stripe-target="cardErrors" role="alert" class="text-red h5 mt-1"></div>
    </div>
  </section>
  <section class="mt-4">
    <h6 class="text-uppercase text-gray">Billing address</h6>
    <div class="form-group mt-2">
      <div class="form-group-header">
        <label>Company / personal email address</label>
      </div>
      <div class="form-group-body">
        <input type="text" class="form-control width-full">
      </div>
    </div>
    <div class="form-group">
      <div class="form-group-header">
        <label>Street address</label>
      </div>
      <div class="form-group-body">
        <input type="text" class="form-control width-full">
      </div>
    </div>
    <div class="d-flex gutter-condensed">
      <div class="form-group col-6 mt-0">
        <div class="form-group-header">
          <label>City</label>
        </div>
        <div class="form-group-body">
          <input type="text" class="form-control width-full">
        </div>
      </div>
      <div class="form-group col-6 mt-0">
        <div class="form-group-header">
          <label>Country</label>
        </div>
        <div class="form-group-body">
          <input type="text" class="form-control width-full">
        </div>
      </div>
    </div>
    <div class="d-flex gutter-condensed">
      <div class="form-group col-6 mt-0">
        <div class="form-group-header">
          <label>State</label>
        </div>
        <div class="form-group-body">
          <input type="text" class="form-control width-full">
        </div>
      </div>
      <div class="form-group col-6 mt-0">
        <div class="form-group-header">
          <label>Zip code</label>
        </div>
        <div class="form-group-body">
          <input type="text" class="form-control width-full">
        </div>
      </div>
    </div>
    <%= form.submit "Start my subscription", class: "btn btn-primary btn-block" %>
  </section>
<% end %>
