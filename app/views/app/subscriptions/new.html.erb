<%= form_with url: app_project_subscriptions_path("project_id"),
  data: { controller: "stripe", action: "stripe#submitForm" },
  id: "payment-form" do |form|
%>
  <div class="form-row">
    <label for="card-element">
      Credit or debit card
    </label>
    <div data-stripe-target="cardElement" id="card-element">
      <!-- A Stripe Element will be inserted here. -->
    </div>

    <!-- Used to display form errors. -->
    <div data-stripe-target="cardErrors" id="card-errors" role="alert"></div>
  </div>

  <button>Submit Payment</button>
<% end %>
