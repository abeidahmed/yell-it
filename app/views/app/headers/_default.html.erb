<header class="Navbar">
  <div class="Navbar-logo">
    <h3>Yellit logo</h3>
  </div>
  <div class="d-md-none">
    <button class="d-flex flex-items-center flex-justify-center close-button text-gray-dark">
      <%= octicon "three-bars", height: 20 %>
    </button>
  </div>
  <div class="d-flex flex-items-center">
    <div class="d-flex flex-items-center">
      <div class="subnav-search d-none d-md-block">
        <input type="text" name="name" class="form-control subnav-search-input" placeholder="Search for your projects..." aria-label="Search for your projects" />
        <%= octicon "search", class: "subnav-search-icon" %>
      </div>
      <details class="ml-2 dropdown details-reset details-overlay d-inline-block">
        <summary class="text-gray p-2 d-inline" aria-haspopup="true">
          <%= octicon "plus" %> <div class="dropdown-caret"></div>
        </summary>
        <ul class="dropdown-menu dropdown-menu-sw">
          <li><a class="dropdown-item" href="#url">New post</a></li>
          <li><a class="dropdown-item" href="#url">New project</a></li>
        </ul>
      </details>
    </div>
    <div class="ml-3">
      <img class="avatar avatar-5 circle" alt="jonrohan" src="https://github.com/jonrohan.png?v=3&s=80" />
    </div>
  </div>
</header>
